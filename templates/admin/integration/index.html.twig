{% extends 'base.html.twig' %}

{% block title %}Integrazioni SCM{% endblock %}

{% block pageContent %}
<div class="p-6 space-y-4 max-w-6xl mx-auto">
    <div class="flex items-center justify-between gap-4">
        <div>
            <p class="text-xs uppercase tracking-widest text-gray-500">Admin</p>
            <h1 class="text-2xl font-bold">SCM Integrations</h1>
        </div>
        <a class="btn btn-primary" href="{{ path('admin_integration_new') }}">Nuova integrazione</a>
    </div>

    <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body p-0">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full border-separate border-spacing-0 inner-bordered-table">
                    <thead>
                    <tr>
                        <th>Project</th>
                        <th>Provider</th>
                        <th>Repo</th>
                        <th>Branch default</th>
                        <th>Attivo</th>
                        <th class="text-right pr-4">Azioni</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for integration in integrations %}
                        <tr>
                            <td>{{ integration.project.name }}</td>
                            <td class="uppercase">{{ integration.provider }}</td>
                            <td><code>{{ integration.repoFullName }}</code></td>
                            <td><code>{{ integration.defaultBranch }}</code></td>
                            <td>
                                <span class="badge {{ integration.isActive ? 'badge-success' : 'badge-ghost' }}">
                                    {{ integration.isActive ? 'On' : 'Off' }}
                                </span>
                            </td>
                            <td class="text-right space-x-2 pr-4">
                                <a class="btn btn-xs btn-outline" href="{{ path('admin_integration_edit', {id: integration.id}) }}">Modifica</a>
                                <form method="post" action="{{ path('admin_integration_delete', {id: integration.id}) }}" class="inline"
                                      onsubmit="return confirm('Confermi la cancellazione?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_integration_' ~ integration.id) }}">
                                    <button class="btn btn-xs btn-error" type="submit">Elimina</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6" class="text-center py-6 text-sm text-gray-500">Nessuna integrazione</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
