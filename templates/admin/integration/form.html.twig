{% extends 'base.html.twig' %}

{% block title %}{{ integration.id ? 'Integrazione' : 'Nuova integrazione' }}{% endblock %}

{% block pageContent %}
<div class="p-6 space-y-4 max-w-4xl mx-auto">
    <div class="flex items-center justify-between gap-4">
        <h1 class="text-2xl font-bold">
            {{ integration.id ? 'Integrazione' : 'Nuova integrazione' }}
        </h1>
        <a class="btn" href="{{ path('admin_integration_index') }}">Torna alla lista</a>
    </div>

    <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body space-y-4">
            {{ form_start(form) }}
                <fieldset class="fieldset grid grid-cols-2 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
                    <legend class="fieldset-legend">SCM Integration</legend>

                    <div>
                        <label class="label">Progetto</label>
                        {{ form_widget(form.project) }}
                        {{ form_errors(form.project) }}
                    </div>

                    <div>
                        <label class="label">Provider</label>
                        {{ form_widget(form.provider) }}
                        {{ form_errors(form.provider) }}
                    </div>

                    <div>
                        <label class="label">Repository</label>
                        {{ form_widget(form.repoFullName) }}
                        {{ form_errors(form.repoFullName) }}
                    </div>

                    <div>
                        <label class="label">Branch di default</label>
                        {{ form_widget(form.defaultBranch) }}
                        {{ form_errors(form.defaultBranch) }}
                    </div>

                    <div class="col-span-2">
                        <label class="label">Pipeline selector</label>
                        {{ form_widget(form.pipelineSelector) }}
                        {{ form_errors(form.pipelineSelector) }}
                    </div>

                    <div>
                        <label class="label">Webhook secret</label>
                        {{ form_widget(form.webhookSecret) }}
                        {{ form_errors(form.webhookSecret) }}
                    </div>

                    <div>
                        <label class="label">Credential ref</label>
                        {{ form_widget(form.credentialRef) }}
                        {{ form_errors(form.credentialRef) }}
                    </div>

                    <div>
                        <label class="label">Attiva</label>
                        <div class="flex items-center gap-2">
                            {{ form_widget(form.isActive) }}
                        </div>
                        {{ form_errors(form.isActive) }}
                    </div>

                    <div class="col-span-2 flex gap-2 pt-2">
                        <button class="btn btn-primary" type="submit">Salva</button>
                        <a class="btn" href="{{ path('admin_integration_index') }}">Annulla</a>
                    </div>
                </fieldset>
                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
