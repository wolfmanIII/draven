{% extends 'base.html.twig' %}

{% block title %}{{ integration.id ? 'Modifica integrazione' : 'Nuova integrazione' }}{% endblock %}

{% block pageContent %}
<div class="p-6 space-y-4 max-w-4xl">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold">
            {{ integration.id ? 'Modifica integrazione' : 'Nuova integrazione' }}
        </h1>
        <a class="btn" href="{{ path('admin_integration_index') }}">Torna alla lista</a>
    </div>

    {{ form_start(form) }}
        <div class="space-y-4">
            {{ form_row(form.project) }}
            {{ form_row(form.provider) }}
            {{ form_row(form.repoFullName) }}
            {{ form_row(form.defaultBranch) }}
            {{ form_row(form.pipelineSelector) }}
            {{ form_row(form.webhookSecret) }}
            {{ form_row(form.credentialRef) }}
            {{ form_row(form.isActive) }}
        </div>
        <div class="mt-6 space-x-2">
            <button class="btn btn-primary" type="submit">Salva</button>
            <a class="btn" href="{{ path('admin_integration_index') }}">Annulla</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
