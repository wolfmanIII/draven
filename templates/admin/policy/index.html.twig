{% extends 'base.html.twig' %}

{% block title %}Policies{% endblock %}

{% block pageContent %}
<div class="p-6 space-y-4 max-w-6xl mx-auto">
    <div class="flex items-center justify-between gap-4">
        <div>
            <p class="text-xs uppercase tracking-widest text-gray-500">Admin</p>
            <h1 class="text-2xl font-bold">Policies</h1>
        </div>
        <a class="btn btn-primary" href="{{ path('admin_policy_new') }}">Nuova policy</a>
    </div>

    <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body p-0">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full">
                    <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrizione</th>
                        <th>Creato</th>
                        <th class="text-right pr-4">Azioni</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for policy in policies %}
                        <tr>
                            <td class="font-semibold">{{ policy.name }}</td>
                            <td class="max-w-md truncate text-sm text-gray-600">{{ policy.description }}</td>
                            <td class="text-sm text-gray-500">{{ policy.createdAt|date('Y-m-d H:i') }}</td>
                            <td class="text-right space-x-2 pr-4">
                                <a class="btn btn-xs btn-outline" href="{{ path('admin_policy_edit', {id: policy.id}) }}">Modifica</a>
                                <form method="post" action="{{ path('admin_policy_delete', {id: policy.id}) }}" class="inline"
                                      onsubmit="return confirm('Confermi la cancellazione?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_policy_' ~ policy.id) }}">
                                    <button class="btn btn-xs btn-error" type="submit">Elimina</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="4" class="text-center py-6 text-sm text-gray-500">Nessuna policy</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
