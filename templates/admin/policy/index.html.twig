{% extends 'base.html.twig' %}

{% block title %}Policies{% endblock %}

{% block pageContent %}
<div class="p-6 space-y-4">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold">Policies</h1>
        <a class="btn btn-primary" href="{{ path('admin_policy_new') }}">Nuova policy</a>
    </div>

    <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
            <thead>
            <tr>
                <th>Nome</th>
                <th>Descrizione</th>
                <th>Creato</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for policy in policies %}
                <tr>
                    <td>{{ policy.name }}</td>
                    <td class="truncate max-w-xs">{{ policy.description }}</td>
                    <td>{{ policy.createdAt|date('Y-m-d H:i') }}</td>
                    <td class="text-right space-x-2">
                        <a class="btn btn-xs" href="{{ path('admin_policy_edit', {id: policy.id}) }}">Modifica</a>
                        <form method="post" action="{{ path('admin_policy_delete', {id: policy.id}) }}" class="inline"
                              onsubmit="return confirm('Confermi la cancellazione?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_policy_' ~ policy.id) }}">
                            <button class="btn btn-xs btn-error" type="submit">Elimina</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="4" class="text-center">Nessuna policy</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
