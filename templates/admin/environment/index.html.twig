{% extends 'base.html.twig' %}

{% block title %}Environments{% endblock %}

{% block pageContent %}
<div class="p-6 space-y-4 max-w-6xl mx-auto">
    <div class="flex items-center justify-between gap-4">
        <div>
            <p class="text-xs uppercase tracking-widest text-gray-500">Admin</p>
            <h1 class="text-2xl font-bold">Environments</h1>
        </div>
        <a class="btn btn-primary" href="{{ path('admin_environment_new') }}">Nuovo environment</a>
    </div>

    <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body p-0">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full border-separate border-spacing-0 inner-bordered-table">
                    <thead>
                    <tr>
                        <th>Project</th>
                        <th>Nome</th>
                        <th>Policy</th>
                        <th>Abilitato</th>
                        <th>Creato</th>
                        <th class="text-right pr-4">Azioni</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for environment in environments %}
                        <tr>
                            <td>{{ environment.project.name }}</td>
                            <td><code>{{ environment.name }}</code></td>
                            <td>{{ environment.policy.name }}</td>
                            <td>
                                <span class="badge {{ environment.isEnabled ? 'badge-success' : 'badge-ghost' }}">
                                    {{ environment.isEnabled ? 'On' : 'Off' }}
                                </span>
                            </td>
                            <td class="text-sm text-gray-500">{{ environment.createdAt|date('Y-m-d H:i') }}</td>
                            <td class="text-right space-x-2 pr-4">
                                <a class="btn btn-xs btn-outline" href="{{ path('admin_environment_edit', {id: environment.id}) }}">Modifica</a>
                                <form method="post" action="{{ path('admin_environment_delete', {id: environment.id}) }}" class="inline"
                                      onsubmit="return confirm('Confermi la cancellazione?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_environment_' ~ environment.id) }}">
                                    <button class="btn btn-xs btn-error" type="submit">Elimina</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6" class="text-center py-6 text-sm text-gray-500">Nessun environment</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
