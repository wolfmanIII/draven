{% extends 'base.html.twig' %}

{% block title %}Environments{% endblock %}

{% block pageContent %}
<div class="p-6 space-y-4">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold">Environments</h1>
        <a class="btn btn-primary" href="{{ path('admin_environment_new') }}">Nuovo environment</a>
    </div>

    <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
            <thead>
            <tr>
                <th>Project</th>
                <th>Nome</th>
                <th>Policy</th>
                <th>Abilitato</th>
                <th>Creato</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for environment in environments %}
                <tr>
                    <td>{{ environment.project.name }}</td>
                    <td><code>{{ environment.name }}</code></td>
                    <td>{{ environment.policy.name }}</td>
                    <td>{{ environment.isEnabled ? 'SÃ¬' : 'No' }}</td>
                    <td>{{ environment.createdAt|date('Y-m-d H:i') }}</td>
                    <td class="text-right space-x-2">
                        <a class="btn btn-xs" href="{{ path('admin_environment_edit', {id: environment.id}) }}">Modifica</a>
                        <form method="post" action="{{ path('admin_environment_delete', {id: environment.id}) }}" class="inline"
                              onsubmit="return confirm('Confermi la cancellazione?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_environment_' ~ environment.id) }}">
                            <button class="btn btn-xs btn-error" type="submit">Elimina</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="6" class="text-center">Nessun environment</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
