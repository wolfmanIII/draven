{% extends 'base.html.twig' %}

{% block title %}{{ project.id ? 'Modifica progetto' : 'Nuovo progetto' }}{% endblock %}

{% block pageContent %}
<div class="p-6 space-y-4 max-w-3xl">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold">
            {{ project.id ? 'Modifica progetto' : 'Nuovo progetto' }}
        </h1>
        <a class="btn" href="{{ path('admin_project_index') }}">Torna alla lista</a>
    </div>

    {{ form_start(form) }}
        <div class="space-y-4">
            {{ form_row(form.name) }}
            {{ form_row(form.slug) }}
            {{ form_row(form.description) }}
            {{ form_row(form.isActive) }}
        </div>
        <div class="mt-6 space-x-2">
            <button class="btn btn-primary" type="submit">Salva</button>
            <a class="btn" href="{{ path('admin_project_index') }}">Annulla</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
